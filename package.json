{
  "name": "frontcamp-news",
  "version": "1.0.0",
  "description": "A training project for the 2018 FrontCamp Mentoring Program",
  "main": "main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npm run build & npm run serve",
    "build": "npm run transpile & npm run bundle",
    "bundle": "browserify docs/js/main.js > docs/js/bundle.js",
    "serve": "http-server ./docs",
    "transpile": "babel src --out-dir docs",
    "watch": "babel src --watch -out-file docs/js/main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alaksej/frontcamp-news.git"
  },
  "author": "Aliaksei Yankou",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alaksej/frontcamp-news/issues"
  },
  "homepage": "https://github.com/alaksej/frontcamp-news#readme",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "browserify": "^16.2.3",
    "http-server": "^0.11.1"
  }
}
